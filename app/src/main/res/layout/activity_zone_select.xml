<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ZoneSelectActivity"
    android:background="#32449a">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:weightSum="1">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="208dp"
            android:id="@+id/blueZoneImageButton"
            android:background="@drawable/bluezone"
            android:onClick="onBlueZoneClick" />

        <ImageButton
            android:layout_width="214dp"
            android:layout_height="211dp"
            android:id="@+id/greenZoneImageButton"
            android:background="@drawable/greenzone"
            android:onClick="onGreenZoneClick" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellowZoneImageButton"
            android:background="@drawable/yellowzone"
            android:onClick="onYellowZoneClick" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            android:id="@+id/redZoneImageButton"
            android:background="@drawable/redzone"
            android:onClick="onRedZoneClick"
            android:layout_weight="0.79" />
    </LinearLayout>

</RelativeLayout>
