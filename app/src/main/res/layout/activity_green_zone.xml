<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.GreenZoneActivity"
    android:background="#32449a">
    <ImageButton
        android:layout_width="220dp"
        android:layout_height="208dp"
        android:id="@+id/blueZoneImageButton"
        android:background="@drawable/greenzone"
        android:onClick="onBlueZoneInfoClick"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;The Green Zone is used to describe a calm state of alterness. A person may be described as happy, focused, content, or ready to learn when in the Green Zone. This is the zone where optimal learning occurs.&quot; -TheZonesOfRegualtion.com"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#fcfcfc"
        android:background="#32459a"
        android:layout_below="@+id/blueZoneImageButton"
        android:layout_toStartOf="@+id/blueZoneImageButton"
        android:layout_marginTop="71dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textColor="#fcfcfc"
        android:textSize="20dp"
        android:background="#35b729"
        android:minWidth="275dp"
        android:text="Back"
        android:onClick="onGreenZoneBackButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />


</RelativeLayout>
