<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activites.MainActivity"
    android:minWidth="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Into ZoneData Table:"
        android:id="@+id/insertTextView"
        android:textSize="45dp"
        android:layout_alignBottom="@+id/timeEditText"
        android:layout_toEndOf="@+id/insertQueryTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeEditText"
        android:text="Time"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/zoneEditText"
        android:textAlignment="center"
        android:layout_alignStart="@+id/queryButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zoneEditText"
        android:text="Zone"
        android:textSize="25dp"
        android:layout_alignEnd="@+id/searchQueryTextView"
        android:layout_below="@+id/timeEditText"
        android:layout_alignStart="@+id/queryButton"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search User Table :"
        android:id="@+id/searchTextView"
        android:textSize="45dp"
        android:layout_alignTop="@+id/searchUserEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchUserEditText"
        android:text="Username"
        android:textSize="25dp"
        android:layout_below="@+id/zoneEditText"
        android:layout_alignEnd="@+id/timeEditText"
        android:layout_marginTop="78dp"
        android:layout_toEndOf="@+id/insertTextView"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Queries"
        android:id="@+id/queryButton"
        android:onClick="queryButtonOnClick"
        android:layout_below="@+id/searchTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_toEndOf="@+id/insertTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insertQueryTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:layout_above="@+id/searchTextView"
        android:textSize="30dp"
        android:layout_below="@+id/timeEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchQueryTextView"
        android:layout_below="@+id/queryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queries For Check Point #1"
        android:id="@+id/textView"
        android:textSize="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
